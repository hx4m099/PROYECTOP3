<Window x:Class="GUI.frmProducto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Ventas - Gestión de Productos" 
        Height="700" 
        Width="1300"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA">

    <Window.Resources>
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#007BFF"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#007BFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#007BFF"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#007BFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007BFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header más compacto -->
        <Border Grid.Row="0" Background="White" CornerRadius="6" Padding="12" Margin="0,0,0,10" 
                BorderBrush="#E9ECEF" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="📦 Gestión de Productos" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="#2C5AA0" 
                           Margin="0,0,0,2"/>
                <TextBlock Text="Administre el catálogo de productos del sistema" 
                           FontSize="11" 
                           Foreground="#6C757D"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Product Details (más estrecho) -->
            <Border Grid.Column="0" Background="White" CornerRadius="6" Padding="15" 
                    BorderBrush="#E9ECEF" BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="📝 Detalle Producto" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#495057" 
                                   Margin="0,0,0,12"/>

                        <!-- Hidden Fields -->
                        <TextBox x:Name="txtindice" Visibility="Hidden" Text="-1"/>
                        <TextBox x:Name="txtid" Visibility="Hidden" Text="0"/>

                        <!-- Código -->
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Código:" FontWeight="SemiBold" Foreground="#495057" Margin="0,0,0,3" FontSize="11"/>
                            <TextBox x:Name="txtcodigo" 
                                     Height="32" 
                                     Style="{StaticResource ModernTextBoxStyle}"/>
                        </StackPanel>

                        <!-- Nombre -->
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Nombre:" FontWeight="SemiBold" Foreground="#495057" Margin="0,0,0,3" FontSize="11"/>
                            <TextBox x:Name="txtnombre" 
                                     Height="32" 
                                     Style="{StaticResource ModernTextBoxStyle}"/>
                        </StackPanel>

                        <!-- Descripción -->
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Descripción:" FontWeight="SemiBold" Foreground="#495057" Margin="0,0,0,3" FontSize="11"/>
                            <TextBox x:Name="txtdescripcion" 
                                     Height="60" 
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     Style="{StaticResource ModernTextBoxStyle}"/>
                        </StackPanel>

                        <!-- Categoría -->
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Categoría:" FontWeight="SemiBold" Foreground="#495057" Margin="0,0,0,3" FontSize="11"/>
                            <ComboBox x:Name="cbocategoria" 
                                      Height="32" 
                                      Style="{StaticResource ModernComboBoxStyle}"/>
                        </StackPanel>

                        <!-- Estado -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Estado:" FontWeight="SemiBold" Foreground="#495057" Margin="0,0,0,3" FontSize="11"/>
                            <ComboBox x:Name="cboestado" 
                                      Height="32" 
                                      Style="{StaticResource ModernComboBoxStyle}"/>
                        </StackPanel>

                        <!-- Buttons -->
                        <StackPanel>
                            <Button x:Name="btnguardar" 
                                    Content="💾 Guardar" 
                                    Height="32" 
                                    FontSize="12"
                                    Margin="0,0,0,6"
                                    Click="btnguardar_Click"
                                    Style="{StaticResource ActionButtonStyle}"/>

                            <Button x:Name="btnlimpiar" 
                                    Content="🧹 Limpiar" 
                                    Background="#6C757D"
                                    Height="32" 
                                    FontSize="12"
                                    Margin="0,0,0,6"
                                    Click="btnlimpiar_Click"
                                    Style="{StaticResource ActionButtonStyle}"/>

                            <Button x:Name="btneliminar" 
                                    Content="🗑 Eliminar" 
                                    Background="#DC3545"
                                    Height="32" 
                                    FontSize="12"
                                    Click="btneliminar_Click"
                                    Style="{StaticResource ActionButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Panel - Products List (más ancho) -->
            <Border Grid.Column="2" Background="White" CornerRadius="6" Padding="15" 
                    BorderBrush="#E9ECEF" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Title -->
                    <TextBlock Grid.Row="0" 
                               Text="📋 Lista de Productos" 
                               FontSize="14" 
                               FontWeight="Bold" 
                               Foreground="#495057" 
                               Margin="0,0,0,10"/>

                    <!-- Search Section (más compacto) -->
                    <Grid Grid.Row="1" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                   Text="Buscar:" 
                                   FontWeight="SemiBold" 
                                   Foreground="#495057" 
                                   VerticalAlignment="Center"
                                   FontSize="11"/>

                        <ComboBox Grid.Column="1" 
                                  x:Name="cbobusqueda" 
                                  Height="28" 
                                  Padding="6,4" 
                                  FontSize="11"
                                  BorderBrush="#DEE2E6" 
                                  BorderThickness="1"/>

                        <TextBox Grid.Column="3" 
                                 x:Name="txtbusqueda" 
                                 Height="28" 
                                 Padding="6,0" 
                                 FontSize="11"
                                 BorderBrush="#DEE2E6" 
                                 BorderThickness="1"
                                 VerticalContentAlignment="Center"/>

                        <Button Grid.Column="5" 
                                x:Name="btnbuscar"
                                Content="🔍" 
                                Width="28" 
                                Height="28" 
                                FontSize="11"
                                Click="btnbuscar_Click"
                                Style="{StaticResource RoundButtonStyle}"/>

                        <Button Grid.Column="7" 
                                x:Name="btnlimpiarbuscador"
                                Content="🧹" 
                                Width="28" 
                                Height="28" 
                                Background="#6C757D"
                                FontSize="11"
                                Click="btnlimpiarbuscador_Click"
                                Style="{StaticResource RoundButtonStyle}"/>

                        <Button Grid.Column="9" 
                                x:Name="btnexportar"
                                Content="📥 Excel" 
                                Height="28" 
                                Padding="8,4" 
                                FontWeight="Bold"
                                FontSize="11"
                                Click="btnexportar_Click"
                                Style="{StaticResource ActionButtonStyle}"/>
                    </Grid>

                    <!-- DataGrid (sin columnas en blanco) -->
                    <DataGrid Grid.Row="2" 
                              x:Name="dgvdata" 
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserReorderColumns="False"
                              CanUserResizeRows="False"
                              CanUserResizeColumns="True"
                              SelectionMode="Single"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              Background="White"
                              BorderThickness="0"
                              RowBackground="White"
                              AlternatingRowBackground="#F8F9FA"
                              FontSize="11"
                              RowHeight="28"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto">

                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Sel." Width="50">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="✓" 
                                                Background="#28A745" 
                                                Foreground="White" 
                                                BorderThickness="0" 
                                                Width="24" 
                                                Height="24"
                                                FontWeight="Bold"
                                                FontSize="10"
                                                Cursor="Hand"
                                                Click="btnseleccionar_Click"
                                                Style="{StaticResource RoundButtonStyle}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Código" Binding="{Binding Codigo}" Width="90" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="6,4"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="#2C5AA0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="160" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="6,4"/>
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="150" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="6,4"/>
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Categoría" Binding="{Binding Categoria}" Width="110" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="6,4"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="70" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="6,4"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="P. Compra" Binding="{Binding PrecioCompra, StringFormat=C}" Width="100" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="6,4"/>
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Foreground" Value="#28A745"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="P. Venta" Binding="{Binding PrecioVenta, StringFormat=C}" Width="100" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="6,4"/>
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Foreground" Value="#007BFF"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="90" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="6,4"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F8F9FA"/>
                                <Setter Property="Foreground" Value="#495057"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="6,8"/>
                                <Setter Property="BorderBrush" Value="#DEE2E6"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                <Setter Property="FontSize" Value="10"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                <Setter Property="Margin" Value="0"/>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="MinHeight" Value="28"/>
                                <Setter Property="Margin" Value="0"/>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>

                    <!-- Summary Section -->
                    <Border Grid.Row="3" 
                            Background="#F8F9FA" 
                            CornerRadius="4" 
                            Padding="10" 
                            Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="📊 Total: " 
                                       FontWeight="Bold" 
                                       Foreground="#495057" 
                                       FontSize="11"/>
                            <TextBlock x:Name="lblTotalProductos" 
                                       Text="0" 
                                       FontWeight="Bold" 
                                       Foreground="#007BFF" 
                                       FontSize="12"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>