<Window x:Class="GUI.frmProveedores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Ventas - Gestión de Proveedores" 
        Height="700" 
        Width="1300"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA">

    <Window.Resources>
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#007BFF"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#80BDFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#007BFF"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#80BDFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" BlurRadius="5" Opacity="0.3"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="1" BlurRadius="3" Opacity="0.3"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20" 
                BorderBrush="#E9ECEF" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="🏭 Gestión de Proveedores" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#2C5AA0" 
                           Margin="0,0,0,5"/>
                <TextBlock Text="Administre la información de proveedores y empresas colaboradoras" 
                           FontSize="14" 
                           Foreground="#6C757D"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Supplier Details -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="25" 
                    BorderBrush="#E9ECEF" BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="📝 Detalles Proveedor" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#495057" 
                                   Margin="0,0,0,20"/>

                        <!-- Hidden Fields -->
                        <TextBox x:Name="txtindice" Visibility="Hidden" Text="-1"/>
                        <TextBox x:Name="txtid" Visibility="Hidden" Text="0"/>

                        <!-- Nro Documento -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Nro Documento:" FontWeight="SemiBold" Foreground="#495057" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtdocumento" 
                                     Height="40" 
                                     Padding="12" 
                                     FontSize="14"
                                     BorderBrush="#DEE2E6" 
                                     BorderThickness="1"/>
                        </StackPanel>

                        <!-- Razón Social -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Razón Social:" FontWeight="SemiBold" Foreground="#495057" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtrazonsocial" 
                                     Height="40" 
                                     Padding="12" 
                                     FontSize="14"
                                     BorderBrush="#DEE2E6" 
                                     BorderThickness="1"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="False"/>
                        </StackPanel>

                        <!-- Correo -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Correo Electrónico:" FontWeight="SemiBold" Foreground="#495057" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtcorreo" 
                                     Height="40" 
                                     Padding="12" 
                                     FontSize="14"
                                     BorderBrush="#DEE2E6" 
                                     BorderThickness="1"/>
                        </StackPanel>

                        <!-- Teléfono -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Teléfono:" FontWeight="SemiBold" Foreground="#495057" Margin="0,0,0,5"/>
                            <TextBox x:Name="txttelefono" 
                                     Height="40" 
                                     Padding="12" 
                                     FontSize="14"
                                     BorderBrush="#DEE2E6" 
                                     BorderThickness="1"/>
                        </StackPanel>

                        <!-- Estado -->
                        <StackPanel Margin="0,0,0,25">
                            <TextBlock Text="Estado:" FontWeight="SemiBold" Foreground="#495057" Margin="0,0,0,5"/>
                            <ComboBox x:Name="cboestado" 
                                      Height="40" 
                                      Padding="12,8" 
                                      FontSize="14"
                                      BorderBrush="#DEE2E6" 
                                      BorderThickness="1"/>
                        </StackPanel>

                        <!-- Buttons -->
                        <StackPanel>
                            <Button x:Name="btnguardar" 
                                    Content="💾 Guardar" 
                                    Background="#28A745" 
                                    Foreground="White" 
                                    Height="45" 
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Margin="0,0,0,10"
                                    Cursor="Hand"
                                    Click="btnguardar_Click"
                                    Style="{StaticResource ActionButtonStyle}"/>

                            <Button x:Name="btnlimpiar" 
                                    Content="🧹 Limpiar" 
                                    Background="#6C757D" 
                                    Foreground="White" 
                                    Height="45" 
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Margin="0,0,0,10"
                                    Cursor="Hand"
                                    Click="btnlimpiar_Click"
                                    Style="{StaticResource ActionButtonStyle}"/>

                            <Button x:Name="btneliminar" 
                                    Content="🗑 Eliminar" 
                                    Background="#DC3545" 
                                    Foreground="White" 
                                    Height="45" 
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Cursor="Hand"
                                    Click="btneliminar_Click"
                                    Style="{StaticResource ActionButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Panel - Suppliers List -->
            <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="25" 
                    BorderBrush="#E9ECEF" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Title -->
                    <TextBlock Grid.Row="0" 
                               Text="📋 Lista de Proveedores" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="#495057" 
                               Margin="0,0,0,20"/>

                    <!-- Search Section -->
                    <Grid Grid.Row="1" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                   Text="Buscar por:" 
                                   FontWeight="SemiBold" 
                                   Foreground="#495057" 
                                   VerticalAlignment="Center"/>

                        <ComboBox Grid.Column="1" 
                                  x:Name="cbobusqueda" 
                                  Height="35" 
                                  Padding="10,6" 
                                  FontSize="13"
                                  BorderBrush="#DEE2E6" 
                                  BorderThickness="1"/>

                        <TextBox Grid.Column="3" 
                                 x:Name="txtbusqueda" 
                                 Height="35" 
                                 Padding="10" 
                                 FontSize="13"
                                 BorderBrush="#DEE2E6" 
                                 BorderThickness="1"/>

                        <Button Grid.Column="5" 
                                x:Name="btnbuscar"
                                Content="🔍" 
                                Width="35" 
                                Height="35" 
                                Background="#007BFF" 
                                Foreground="White" 
                                BorderThickness="0" 
                                FontSize="14"
                                Cursor="Hand"
                                Click="btnbuscar_Click"
                                Style="{StaticResource RoundButtonStyle}"/>

                        <Button Grid.Column="7" 
                                x:Name="btnlimpiarbuscador"
                                Content="🧹" 
                                Width="35" 
                                Height="35" 
                                Background="#6C757D" 
                                Foreground="White" 
                                BorderThickness="0" 
                                FontSize="14"
                                Cursor="Hand"
                                Click="btnlimpiarbuscador_Click"
                                Style="{StaticResource RoundButtonStyle}"/>

                        <Button Grid.Column="9" 
                                x:Name="btnexportar"
                                Content="📥 Exportar Excel" 
                                Background="#28A745" 
                                Foreground="White" 
                                Height="35" 
                                Padding="12,8" 
                                BorderThickness="0" 
                                FontWeight="Bold"
                                FontSize="13"
                                Cursor="Hand"
                                Click="btnexportar_Click"
                                Style="{StaticResource ActionButtonStyle}"/>
                    </Grid>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="2" 
                              x:Name="dgvdata" 
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserReorderColumns="False"
                              CanUserResizeRows="False"
                              SelectionMode="Single"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              Background="White"
                              BorderThickness="0"
                              RowBackground="White"
                              AlternatingRowBackground="#F8F9FA"
                              FontSize="13"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto">

                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Seleccionar" Width="90">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="✓" 
                                                Background="#28A745" 
                                                Foreground="White" 
                                                BorderThickness="0" 
                                                Width="30" 
                                                Height="30"
                                                FontWeight="Bold"
                                                Cursor="Hand"
                                                Click="btnseleccionar_Click"
                                                Style="{StaticResource RoundButtonStyle}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="60" IsReadOnly="True" Visibility="Hidden"/>

                            <DataGridTextColumn Header="Nro Documento" Binding="{Binding Documento}" Width="130" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="8"/>
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Razón Social" Binding="{Binding RazonSocial}" Width="250" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="8"/>
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="#2C5AA0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Correo" Binding="{Binding Correo}" Width="220" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="8"/>
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" Width="120" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="8"/>
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="EstadoValor" Binding="{Binding EstadoValor}" Width="80" IsReadOnly="True" Visibility="Hidden"/>

                            <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="100" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="8"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F8F9FA"/>
                                <Setter Property="Foreground" Value="#495057"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="10,12"/>
                                <Setter Property="BorderBrush" Value="#DEE2E6"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="12"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Padding" Value="0"/>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="MinHeight" Value="40"/>
                                <Setter Property="Margin" Value="0"/>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>

                    <!-- Summary Section -->
                    <Border Grid.Row="3" 
                            Background="#F8F9FA" 
                            CornerRadius="4" 
                            Padding="15" 
                            Margin="0,15,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="📊 Total de proveedores: " 
                                           FontWeight="Bold" 
                                           Foreground="#495057" 
                                           FontSize="14"/>
                                <TextBlock x:Name="lblTotalProveedores" 
                                           Text="0" 
                                           FontWeight="Bold" 
                                           Foreground="#007BFF" 
                                           FontSize="16"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" Orientation="Horizontal">
                                <TextBlock Text="✅ Activos: " 
                                           FontWeight="Bold" 
                                           Foreground="#495057" 
                                           FontSize="14"/>
                                <TextBlock x:Name="lblProveedoresActivos" 
                                           Text="0" 
                                           FontWeight="Bold" 
                                           Foreground="#28A745" 
                                           FontSize="16"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
