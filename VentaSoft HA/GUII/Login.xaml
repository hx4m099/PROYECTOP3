<Window x:Class="GUI.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Venta - Login" 
        Height="450" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Loaded="Login_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Panel Izquierdo Azul -->
        <Grid Grid.Column="0" Background="#4A90E2">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Icono de bolsa de compras -->
                <Border Background="White" 
                        Width="80" 
                        Height="80" 
                        CornerRadius="10"
                        Margin="0,0,0,20">
                    <Viewbox Width="40" Height="40">
                        <Canvas Width="24" Height="24">
                            <Path Fill="#4A90E2" 
                                  Data="M19 7h-3V6a4 4 0 0 0-8 0v1H5a1 1 0 0 0-1 1v11a3 3 0 0 0 3 3h10a3 3 0 0 0 3-3V8a1 1 0 0 0-1-1zM10 6a2 2 0 0 1 4 0v1h-4V6zm8 13a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V9h2v1a1 1 0 0 0 2 0V9h4v1a1 1 0 0 0 2 0V9h2v10z"/>
                        </Canvas>
                    </Viewbox>
                </Border>

                <TextBlock Text="SISTEMA DE VENTA" 
                           Foreground="White" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           TextAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Panel Derecho Blanco -->
        <Grid Grid.Column="1" Background="White">
            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center" 
                        Width="250">

                <TextBlock Text="INICIAR SESION" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#333" 
                           TextAlignment="Center" 
                           Margin="0,0,0,30"/>

                <!-- Campo Documento -->
                <TextBlock Text="Nro Documento:" 
                           Foreground="#666" 
                           Margin="0,0,0,5"/>
                <TextBox x:Name="txtdocumento" 
                         Height="35" 
                         Padding="10,8" 
                         FontSize="14"
                         BorderBrush="#DDD" 
                         BorderThickness="1"
                         Margin="0,0,0,15"
                         KeyDown="txtdocumento_KeyDown"/>

                <!-- Campo Contraseña -->
                <TextBlock Text="Contraseña:" 
                           Foreground="#666" 
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtclave" 
                             Height="35" 
                             Padding="10,8" 
                             FontSize="14"
                             BorderBrush="#DDD" 
                             BorderThickness="1"
                             Margin="0,0,0,15"
                             KeyDown="txtclave_KeyDown"/>

                <!-- Enlace de recuperación de contraseña -->
                <TextBlock HorizontalAlignment="Right" 
                           Margin="0,0,0,20">
                    <Hyperlink x:Name="linkRecuperarContrasena" 
                               Click="linkRecuperarContrasena_Click"
                               Foreground="#E74C3C"
                               FontSize="11"
                               FontWeight="Bold">
                        ¿Olvidaste tu contraseña?
                    </Hyperlink>
                </TextBlock>

                <!-- Botones -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <Button x:Name="btningresar" 
                            Content="🔑 Ingresar" 
                            Background="#4A90E2" 
                            Foreground="White" 
                            Width="100" 
                            Height="35" 
                            FontSize="12"
                            FontWeight="Bold"
                            BorderThickness="0" 
                            Margin="0,0,10,0"
                            Cursor="Hand"
                            Click="btningresar_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="3">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#357ABD"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="btncancelar" 
                            Content="❌ Cancelar" 
                            Background="#E74C3C" 
                            Foreground="White" 
                            Width="100" 
                            Height="35" 
                            FontSize="12"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="btncancelar_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="3">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C0392B"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- Hipervínculo para registrarse -->
                <TextBlock HorizontalAlignment="Center" 
                           Margin="0,20,0,0">
                    <Run Text="¿No tienes cuenta? " 
                         Foreground="#666" 
                         FontSize="12"/>
                    <Hyperlink x:Name="linkRegistrarse" 
                               Click="linkRegistrarse_Click"
                               Foreground="#4A90E2"
                               FontSize="12"
                               FontWeight="Bold">
                        Regístrate aquí
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</Window>