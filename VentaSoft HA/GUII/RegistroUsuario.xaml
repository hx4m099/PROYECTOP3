<Window x:Class="GUI.RegistroUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro de Usuario" 
        Height="500" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Grid.Row="0" Background="#4A90E2" Height="80">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="REGISTRO DE USUARIO" 
                           Foreground="White" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           TextAlignment="Center"/>
                <TextBlock Text="Complete todos los campos para crear su cuenta" 
                           Foreground="White" 
                           FontSize="12" 
                           TextAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Formulario -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,30,40,20">

                <!-- Documento -->
                <TextBlock Text="Número de Documento:" 
                           Foreground="#333" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="txtDocumento" 
                         Height="35" 
                         Padding="10,8" 
                         FontSize="14"
                         BorderBrush="#DDD" 
                         BorderThickness="1"
                         Margin="0,0,0,15"/>

                <!-- Nombre Completo -->
                <TextBlock Text="Nombre Completo:" 
                           Foreground="#333" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="txtNombreCompleto" 
                         Height="35" 
                         Padding="10,8" 
                         FontSize="14"
                         BorderBrush="#DDD" 
                         BorderThickness="1"
                         Margin="0,0,0,15"/>

                <!-- Correo -->
                <TextBlock Text="Correo Electrónico:" 
                           Foreground="#333" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="txtCorreo" 
                         Height="35" 
                         Padding="10,8" 
                         FontSize="14"
                         BorderBrush="#DDD" 
                         BorderThickness="1"
                         Margin="0,0,0,15"/>

                <!-- Contraseña -->
                <TextBlock Text="Contraseña:" 
                           Foreground="#333" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtClave" 
                             Height="35" 
                             Padding="10,8" 
                             FontSize="14"
                             BorderBrush="#DDD" 
                             BorderThickness="1"
                             Margin="0,0,0,15"/>

                <!-- Confirmar Contraseña -->
                <TextBlock Text="Confirmar Contraseña:" 
                           Foreground="#333" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtConfirmarClave" 
                             Height="35" 
                             Padding="10,8" 
                             FontSize="14"
                             BorderBrush="#DDD" 
                             BorderThickness="1"
                             Margin="0,0,0,15"/>

                <!-- Rol -->
                <TextBlock Text="Rol:" 
                           Foreground="#333" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="cboRol" 
                          Height="35" 
                          Padding="10,8" 
                          FontSize="14"
                          BorderBrush="#DDD" 
                          BorderThickness="1"
                          Margin="0,0,0,20"/>

            </StackPanel>
        </ScrollViewer>

        <!-- Botones -->
        <Border Grid.Row="2" Background="#F8F9FA" BorderBrush="#DDD" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="20">

                <Button x:Name="btnRegistrar" 
                        Content="✅ Registrar" 
                        Background="#28A745" 
                        Foreground="White" 
                        Width="120" 
                        Height="40" 
                        FontSize="14"
                        FontWeight="Bold"
                        BorderThickness="0" 
                        Margin="0,0,15,0"
                        Cursor="Hand"
                        Click="btnRegistrar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#218838"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="btnCancelar" 
                        Content="❌ Cancelar" 
                        Background="#6C757D" 
                        Foreground="White" 
                        Width="120" 
                        Height="40" 
                        FontSize="14"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnCancelar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5A6268"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>