<Window x:Class="GUI.frmDetalleCompra"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Ventas - Detalle de Compra" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#E1E8ED"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#3498DB"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EditableTextBox" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="IsReadOnly" Value="False"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#95A5A6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7F8C8D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#229954"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="10"/>
            </Border.Effect>
            <Grid Margin="30,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#9B59B6" Width="50" Height="50" CornerRadius="25" Margin="0,0,20,0">
                        <TextBlock Text="📦" FontSize="24" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Detalle de Compra" FontSize="24" FontWeight="Bold" Foreground="#2C3E50"/>
                        <TextBlock Text="Consulta y genera reportes de las compras realizadas" FontSize="14" Foreground="#7F8C8D"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenido Principal -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30,20,30,30">

                <!-- Sección de Búsqueda -->
                <Border Background="White" CornerRadius="10" Padding="25" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="3" Opacity="0.1" BlurRadius="15"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <Label Content="Número Documento"/>
                            <TextBox x:Name="txtbusqueda" Style="{StaticResource EditableTextBox}" 
                                     FontSize="14" Padding="15,10"/>
                        </StackPanel>

                        <Button Grid.Column="1" x:Name="btnbuscar" Content="🔍 Buscar" 
                                Style="{StaticResource PrimaryButton}" 
                                VerticalAlignment="Bottom" Margin="0,0,10,10"
                                Click="btnbuscar_Click"/>

                        <Button Grid.Column="2" x:Name="btnborrar" Content="🗑 Limpiar" 
                                Style="{StaticResource SecondaryButton}" 
                                VerticalAlignment="Bottom" Margin="0,0,0,10"
                                Click="btnborrar_Click"/>
                    </Grid>
                </Border>

                <!-- Información de la Compra y Proveedor -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Información Compra -->
                    <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="25">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="3" Opacity="0.1" BlurRadius="15"/>
                        </Border.Effect>

                        <StackPanel>
                            <TextBlock Text="📊 Información Compra" FontSize="18" FontWeight="Bold" 
                                       Foreground="#2C3E50" Margin="0,0,0,20"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <Label Content="Fecha"/>
                                    <TextBox x:Name="txtfecha"/>

                                    <Label Content="Tipo Documento"/>
                                    <TextBox x:Name="txttipodocumento"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <Label Content="Usuario"/>
                                    <TextBox x:Name="txtusuario"/>

                                    <Label Content="Número Documento"/>
                                    <TextBox x:Name="txtnumerodocumento"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Información Proveedor -->
                    <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="25">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="3" Opacity="0.1" BlurRadius="15"/>
                        </Border.Effect>

                        <StackPanel>
                            <TextBlock Text="🏢 Información Proveedor" FontSize="18" FontWeight="Bold" 
                                       Foreground="#2C3E50" Margin="0,0,0,20"/>

                            <Label Content="Número Documento"/>
                            <TextBox x:Name="txtdocproveedor"/>

                            <Label Content="Razón Social"/>
                            <TextBox x:Name="txtnombreproveedor"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Detalle de Productos -->
                <Border Background="White" CornerRadius="10" Padding="25" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="3" Opacity="0.1" BlurRadius="15"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="📋 Detalle de Productos" FontSize="18" FontWeight="Bold" 
                                   Foreground="#2C3E50" Margin="0,0,0,20"/>

                        <DataGrid x:Name="dgvdata" AutoGenerateColumns="False" 
                                  CanUserAddRows="False" CanUserDeleteRows="False" 
                                  IsReadOnly="True" SelectionMode="Single"
                                  GridLinesVisibility="Horizontal" 
                                  HeadersVisibility="Column"
                                  Background="White" 
                                  BorderThickness="1" BorderBrush="#E1E8ED"
                                  RowBackground="White" AlternatingRowBackground="#F8F9FA"
                                  FontSize="13" Height="200">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Producto" Binding="{Binding Producto}" Width="*" MinWidth="200"/>
                                <DataGridTextColumn Header="Precio Compra" Binding="{Binding PrecioCompra}" Width="120"/>
                                <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="100"/>
                                <DataGridTextColumn Header="SubTotal" Binding="{Binding SubTotal}" Width="120"/>
                            </DataGrid.Columns>

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#9B59B6"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Padding" Value="10,8"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                    <Setter Property="BorderBrush" Value="#8E44AD"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <!-- Total y Acciones -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total -->
                    <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="25" Margin="0,0,20,0">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="3" Opacity="0.1" BlurRadius="15"/>
                        </Border.Effect>

                        <StackPanel>
                            <TextBlock Text="💰 Resumen de Compra" FontSize="18" FontWeight="Bold" 
                                       Foreground="#2C3E50" Margin="0,0,0,20"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <StackPanel Margin="0,0,20,0">
                                    <Label Content="Monto Total" HorizontalAlignment="Center"/>
                                    <TextBox x:Name="txtmontototal" FontWeight="Bold" FontSize="16"
                                             Background="#F4F1FB" BorderBrush="#9B59B6" 
                                             Width="150" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Botón Descargar -->
                    <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="25">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="3" Opacity="0.1" BlurRadius="15"/>
                        </Border.Effect>

                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="📄 Generar Reporte" FontSize="16" FontWeight="Bold" 
                                       Foreground="#2C3E50" Margin="0,0,0,15" HorizontalAlignment="Center"/>

                            <Button x:Name="btndescargar" Content="📥 Descargar PDF" 
                                    Style="{StaticResource SuccessButton}"
                                    Click="btndescargar_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>