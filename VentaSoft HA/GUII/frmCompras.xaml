<Window x:Class="GUI.frmCompras"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Ventas - Registrar Compra" Height="800" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA"
        Loaded="frmCompras_Load">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#E1E8ED"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#3498DB"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#E1E8ED"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#229954"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AddButton" TargetType="Button">
            <Setter Property="Background" Value="#E67E22"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D35400"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="10"/>
            </Border.Effect>
            <Grid Margin="30,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#E67E22" Width="50" Height="50" CornerRadius="25" Margin="0,0,20,0">
                        <TextBlock Text="🛒" FontSize="24" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Registrar Compra" FontSize="24" FontWeight="Bold" Foreground="#2C3E50"/>
                        <TextBlock Text="Gestiona las compras y actualiza el inventario" FontSize="14" Foreground="#7F8C8D"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenido Principal -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30,20,30,30">

                <!-- Información de Compra y Proveedor -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Información Compra -->
                    <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="25">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="3" Opacity="0.1" BlurRadius="15"/>
                        </Border.Effect>

                        <StackPanel>
                            <TextBlock Text="📊 Información Compra" FontSize="18" FontWeight="Bold" 
                                       Foreground="#2C3E50" Margin="0,0,0,20"/>

                            <Label Content="Fecha"/>
                            <TextBox x:Name="txtfecha" IsReadOnly="True" Background="#F8F9FA"/>

                            <Label Content="Tipo Documento"/>
                            <Label x:Name="lbltipodocumento" Content="Factura" Background="#F8F9FA" Padding="12,8" BorderBrush="#E1E8ED" BorderThickness="1" FontSize="13" Margin="0,0,0,10"/>

                        </StackPanel>
                    </Border>

                    <!-- Información Proveedor -->
                    <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="25">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="3" Opacity="0.1" BlurRadius="15"/>
                        </Border.Effect>

                        <StackPanel>
                            <TextBlock Text="🏢 Información Proveedor" FontSize="18" FontWeight="Bold" 
                                       Foreground="#2C3E50" Margin="0,0,0,20"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <Label Content="Número Documento"/>
                                    <TextBox x:Name="txtdocproveedor" IsReadOnly="True" Background="#F8F9FA"/>

                                    <Label Content="Razón Social"/>
                                    <TextBox x:Name="txtnombreproveedor" IsReadOnly="True" Background="#F8F9FA"/>
                                </StackPanel>

                                <Button Grid.Column="1" x:Name="btnbuscarproveedor" Content="🔍" 
                                        Style="{StaticResource PrimaryButton}" 
                                        VerticalAlignment="Bottom" Margin="0,0,0,10"
                                        Width="40" Height="35"
                                        Click="btnbuscarproveedor_Click"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Información de Producto -->
                <Border Background="White" CornerRadius="10" Padding="25" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="3" Opacity="0.1" BlurRadius="15"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="📦 Información de Producto" FontSize="18" FontWeight="Bold" 
                                   Foreground="#2C3E50" Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <Label Content="Cód. Producto"/>
                                <Grid>
                                    <TextBox x:Name="txtcodproducto" KeyDown="txtcodproducto_KeyDown"/>
                                    <Button x:Name="btnbuscarproducto" Content="🔍" 
                                            Style="{StaticResource PrimaryButton}" 
                                            HorizontalAlignment="Right" VerticalAlignment="Center"
                                            Width="30" Height="25" Margin="0,0,5,10"
                                            Click="btnbuscarproducto_Click"/>
                                </Grid>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0">
                                <Label Content="Producto"/>
                                <TextBox x:Name="txtproducto" IsReadOnly="True" Background="#F8F9FA"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Margin="10,0">
                                <Label Content="Precio Compra"/>
                                <TextBox x:Name="txtpreciocompra" KeyDown="txtpreciocompra_KeyDown"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" Margin="10,0">
                                <Label Content="Precio Venta"/>
                                <TextBox x:Name="txtprecioventa" KeyDown="txtprecioventa_KeyDown"/>
                            </StackPanel>

                            <StackPanel Grid.Column="4" Margin="10,0">
                                <Label Content="Cantidad"/>
                                <TextBox x:Name="txtcantidad" Text="1"/>
                            </StackPanel>

                            <Button Grid.Column="5" x:Name="btnagregarproducto" Content="➕ Agregar" 
                                    Style="{StaticResource AddButton}" 
                                    VerticalAlignment="Bottom" Margin="10,0,0,10"
                                    Click="btnagregarproducto_Click"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Lista de Productos -->
                <Border Background="White" CornerRadius="10" Padding="25" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="3" Opacity="0.1" BlurRadius="15"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="📋 Productos Agregados" FontSize="18" FontWeight="Bold" 
                                   Foreground="#2C3E50" Margin="0,0,0,20"/>

                        <DataGrid x:Name="dgvdata" AutoGenerateColumns="False" 
                                  CanUserAddRows="False" CanUserDeleteRows="False" 
                                  IsReadOnly="True" SelectionMode="Single"
                                  GridLinesVisibility="Horizontal" 
                                  HeadersVisibility="Column"
                                  Background="White" 
                                  BorderThickness="1" BorderBrush="#E1E8ED"
                                  RowBackground="White" AlternatingRowBackground="#F8F9FA"
                                  FontSize="13" Height="200">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="IdProducto" Binding="{Binding IdProducto}" Width="0" Visibility="Hidden"/>
                                <DataGridTextColumn Header="Producto" Binding="{Binding Producto}" Width="*" MinWidth="200"/>
                                <DataGridTextColumn Header="Precio Compra" Binding="{Binding PrecioCompra}" Width="120"/>
                                <DataGridTextColumn Header="Precio Venta" Binding="{Binding PrecioVenta}" Width="120"/>
                                <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="100"/>
                                <DataGridTextColumn Header="SubTotal" Binding="{Binding SubTotal}" Width="120"/>
                                <DataGridTemplateColumn Header="Eliminar" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="🗑" Background="#E74C3C" Foreground="White" 
                                                    BorderThickness="0" Padding="5" Cursor="Hand"
                                                    Click="btnEliminar_Click"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#E67E22"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Padding" Value="10,8"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                    <Setter Property="BorderBrush" Value="#D35400"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <!-- Total y Registro -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total -->
                    <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="25" Margin="0,0,20,0">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="3" Opacity="0.1" BlurRadius="15"/>
                        </Border.Effect>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="💰 Total a Pagar: " FontSize="18" FontWeight="Bold" 
                                       Foreground="#2C3E50" VerticalAlignment="Center"/>
                            <TextBox x:Name="txttotalpagar" Text="0.00" FontWeight="Bold" FontSize="18"
                                     Background="#E8F6F3" BorderBrush="#27AE60" 
                                     Width="150" IsReadOnly="True" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Botón Registrar -->
                    <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="25">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="3" Opacity="0.1" BlurRadius="15"/>
                        </Border.Effect>

                        <StackPanel VerticalAlignment="Center">
                            <Button x:Name="btnregistrar" Content="💾 Registrar Compra" 
                                    Style="{StaticResource SuccessButton}"
                                    Click="btnregistrar_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Campos ocultos -->
                <StackPanel Visibility="Hidden">
                    <TextBox x:Name="txtidproveedor" Text="0"/>
                    <TextBox x:Name="txtidproducto" Text="0"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>